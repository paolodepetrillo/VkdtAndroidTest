VKDT_JPEG_CFLAGS=-I${LIBJPEG_PREFIX}/src/libjpeg -I${LIBJPEG_PREFIX}/src/libjpeg-build
VKDT_JPEG_LDFLAGS=-L${LIBJPEG_PREFIX}/src/libjpeg-build -ljpeg
export VKDT_JPEG_CFLAGS VKDT_JPEG_LDFLAGS

VKDT_USE_RAWINPUT=2
export VKDT_USE_RAWINPUT

VKDT_VULKAN_CFLAGS=-I../ext/volk -DVK_NO_PROTOTYPES -DVKDT_USE_PIPELINE_CACHE
export VKDT_VULKAN_CFLAGS

NDK=${CMAKE_ANDROID_NDK}
export NDK
TOOLCHAIN=${ANDROID_TOOLCHAIN_ROOT}
export TOOLCHAIN
ANDROID_VERSION=${ANDROID_PLATFORM_LEVEL}
export ANDROID_VERSION

TARGET=aarch64-linux-android
CC=${CMAKE_C_COMPILER} -target ${ANDROID_LLVM_TRIPLE}
CXX=${CMAKE_CXX_COMPILER} -target ${ANDROID_LLVM_TRIPLE}
AR=${CMAKE_AR}
GLSLC=${CMAKE_ANDROID_NDK}/shader-tools/linux-x86_64/glslc
GLSLC_FLAGS=--target-env=vulkan1.2
OPT_CFLAGS=-Wall -pipe -O3 -DNDEBUG
CFLAGS=-Wall -pipe -I. -D_GNU_SOURCE -std=c11
CXXFLAGS=-Wall -pipe -I. -D_GNU_SOURCE
export TARGET CC CXX AR GLSLC GLSLC_FLAGS OPT_CFLAGS CFLAGS CXXFLAGS
