VKDT_JPEG_STATIC=1
export VKDT_JPEG_STATIC

VKDT_USE_RAWINPUT=2
export VKDT_USE_RAWINPUT

NDK=${CMAKE_ANDROID_NDK}
export NDK
TOOLCHAIN=${ANDROID_TOOLCHAIN_ROOT}
export TOOLCHAIN
ANDROID_VERSION=${ANDROID_PLATFORM_LEVEL}
export ANDROID_VERSION

TARGET=aarch64-linux-android
CC=${CMAKE_C_COMPILER} -target ${ANDROID_LLVM_TRIPLE}
CXX=${CMAKE_CXX_COMPILER} -target ${ANDROID_LLVM_TRIPLE}
AR=${CMAKE_AR}
GLSLC=${CMAKE_ANDROID_NDK}/shader-tools/linux-x86_64/glslc
GLSLC_FLAGS=--target-env=vulkan1.2
OPT_CFLAGS=-Wall -pipe -O3 -DNDEBUG
export TARGET CC CXX AR GLSLC GLSLC_FLAGS OPT_CFLAGS
